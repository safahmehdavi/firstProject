#include <iostream>
#include <string>
using namespace std;

class Person{
private:
  string name;
  int age;


public:
   Person():age(0){};
   
   void setName(const string &newName){
       newName = name;
   }
   void setAge(int newAge){
       newAge = age;
       
   }
   void displayInfo(){
       cout<<"Name: " << name << endl;
       cout<<"Age: " << age << endl;
   }

};




int main(){
    
    Person person;
    person.setName("Safah");
    person.setAge(21);
    person.displayInfo();
    
    return 0;
}